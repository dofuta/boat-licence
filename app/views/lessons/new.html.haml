/=render partial: "lessons/lesson", locals: {lesson: @lesson, places: @places, teachers: @teachers, boats: @boats}
.Lesson
  =form_for @lesson do |f|
    .Lesson__Group1
      .Lesson__Group1Type
        %label 種類
        %select{id: "lesson_type_number", name: "lesson[type_number]"}
          %option{value:""}
          %option{value:"0"}実技
          %option{value:"1"}初級
          %option{value:"2"}上級
          %option{value:"3"}特殊
          %option{value:"4"}湖川
      .Lesson__Group1Date
        %label 講習日
        =f.date_field :date
      .Lesson__Group1Boat
        %label 船(shiftキーで複数選択)
        =f.collection_select :boat_ids, @boats, :id, :name, {:prompt => true}, {:multiple => true, :size => 5 }
    .Lesson__Group2
      .Lesson__Group2Place
        %label 会場名
        = f.collection_select :place_id, @places, :id, :facility_name, prompt: true, name: "lesson[place_id]"
      .Lesson__Group2GGEvent
        %label Googleカレンダー

    .Lesson__Group3
      .Lesson__Group3Teacher
        %label 講師(shiftキーで複数選択)
        =f.collection_select :teacher_ids, @teachers, :id, :name, {:prompt => true}, {:multiple => true, :size => 5 }
      .Lesson__Group3Remark
        %label 備考
        =f.text_area :remark
    .Lesson__Group4
      .Lesson__Group4Submit
        =f.submit :登録する
